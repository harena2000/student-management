{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "es2022",
        "target": "es2022",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "allowJs": true,
        "noImplicitAny": false,
        "types": ["vite/client","node"],
        "sourceMap": true,
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "baseUrl": ".",
        "verbatimModuleSyntax": false
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue",
    ]
}
